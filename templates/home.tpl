% rebase('base.tpl')
<div class="card shadow">
    <div class="card-body">
        <h1 class="card-title">Welcome to NBA Analysis</h1>
        <p class="lead">Choose an option from the menu above to begin analyzing NBA data.</p>
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body text-center">
                        <h3>Team Analysis</h3>
                        <p>Analyze team performance statistics over time.</p>
                        <a href="/team" class="btn btn-primary">Team Analysis</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body text-center">
                        <h3>Player Analysis</h3>
                        <p>Analyze individual player statistics over time.</p>
                        <a href="/player" class="btn btn-primary">Player Analysis</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>